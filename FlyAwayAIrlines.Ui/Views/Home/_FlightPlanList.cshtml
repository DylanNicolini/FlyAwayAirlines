

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Aircraft Name</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Seat Price</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: flightPlans">
        <tr>
            <td data-bind="text: FlightPlanId"></td>
            <td data-bind="text: AircraftName"></td>
            <td data-bind="text: OriginAirport"></td>
            <td data-bind="text: DestinationAirport"></td>
            <td data-bind="text: DepartureTime"></td>
            <td data-bind="text: ArrivalTime"></td>
            <td data-bind="text: SeatPrice"></td>
            <td><input type="button" class="btn btn-danger btn-xs" value=" [x] Book Flight " data-bind="click: $parent.bookFlight" /></td>
        </tr>
    </tbody>
</table>

<br />

<input type="button" class="btn btn-default" id="btnGetFlights" value="Refresh"  /> 